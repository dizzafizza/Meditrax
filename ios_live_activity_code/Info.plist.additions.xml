<!-- Add these entries to ios/App/App/Info.plist -->
<!-- Reference: https://developer.apple.com/documentation/activitykit/displaying-live-data-with-live-activities -->

<!-- Enable Live Activities support -->
<key>NSSupportsLiveActivities</key>
<true/>

<!-- Enable frequent updates (for real-time tracking) -->
<key>NSSupportsLiveActivitiesFrequentUpdates</key>
<true/>

<!-- Background modes for persistent tracking -->
<key>UIBackgroundModes</key>
<array>
    <string>fetch</string>
    <string>processing</string>
    <string>remote-notification</string>
</array>

<!-- Required for Activity Kit -->
<key>NSUserActivityTypes</key>
<array>
    <string>MeditraxEffectTracking</string>
</array>

